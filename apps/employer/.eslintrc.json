{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "import/order": "off",
    "prefer-template": "off",
    "arrow-body-style": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/*.test.tsx", "**/*.test.ts", "**/*.spec.tsx", "**/*.spec.ts"],
      "rules": {
        "react/display-name": "off"
      }
    }
  ],
  "ignorePatterns": ["node_modules/", ".next/", "out/", "**/*.d.ts"]
}
