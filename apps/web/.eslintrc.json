{
  "root": true,
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/no-unescaped-entities": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/*.test.tsx", "**/*.test.ts", "**/*.spec.tsx", "**/*.spec.ts"],
      "rules": {
        "react/display-name": "off"
      }
    }
  ],
  "ignorePatterns": ["node_modules/", ".next/", "out/", "**/*.d.ts"]
}
