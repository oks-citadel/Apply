{
  "name": "@applyforus/i18n",
  "version": "1.0.0",
  "private": true,
  "description": "Internationalization utilities for ApplyForUs platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./locales/*": "./locales/*"
  },
  "files": [
    "dist",
    "locales"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "intl-messageformat": "^10.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  }
}
