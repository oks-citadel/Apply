{
  "dashboard": {
    "title": "ApplyForUs - Database Metrics",
    "tags": ["applyforus", "database", "postgresql"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Connection Pool - Active",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "db_connection_pool_used",
            "legendFormat": "{{ service }} - Used",
            "refId": "A"
          },
          {
            "expr": "db_connection_pool_size",
            "legendFormat": "{{ service }} - Total",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Connection Pool Utilization (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "db_connection_pool_used / db_connection_pool_size * 100",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Utilization %", "max": 100},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [90], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Connection Pool Usage"
        }
      },
      {
        "id": 3,
        "title": "Query Duration - P95 (seconds)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{ service }} P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(db_query_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{ service }} P50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Query Rate (queries/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(db_queries_total[5m])) by (service, operation)",
            "legendFormat": "{{ service }} - {{ operation }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "qps", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Query Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(db_queries_total{status=\"error\"}[5m])) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "qps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "PostgreSQL - Active Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 7,
        "title": "PostgreSQL - Transactions/sec",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "Commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Transactions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "PostgreSQL - Cache Hit Ratio (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit / (pg_stat_database_blks_hit + pg_stat_database_blks_read) * 100",
            "legendFormat": "Cache Hit %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Cache Hit %", "min": 0, "max": 100},
          {"format": "short"}
        ]
      }
    ]
  }
}
