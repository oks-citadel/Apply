{
  "dashboard": {
    "title": "Job Apply Platform - Overview",
    "tags": ["platform", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Overall Request Rate (req/s)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total[5m])) by (service) * 100",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error %"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "P95 Request Latency (seconds)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (service, le))",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Active Connections",
        "targets": [
          {
            "expr": "sum(active_connections) by (service)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Memory Usage (GB)",
        "targets": [
          {
            "expr": "sum(process_resident_memory_bytes) by (service) / (1024*1024*1024)",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "decgbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "CPU Usage (%)",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 24},
        "type": "singlestat",
        "title": "Services Up",
        "targets": [
          {
            "expr": "count(up{job=~\".*-service\"} == 1)",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "none"
      },
      {
        "id": 8,
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 24},
        "type": "singlestat",
        "title": "Total Requests (5m)",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short"
      },
      {
        "id": 9,
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 24},
        "type": "singlestat",
        "title": "Error Count (5m)",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{status_code=~\"5..\"}[5m]))",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "10,50"
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 24},
        "type": "singlestat",
        "title": "Avg Response Time (ms)",
        "targets": [
          {
            "expr": "avg(rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])) * 1000",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "ms"
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
