# AlertManager Secrets Configuration
# Copy this file to secrets.env and fill in the actual values
# DO NOT commit secrets.env to version control!

# SendGrid API Key for email notifications
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Slack Webhook URL for notifications
# Create at: https://api.slack.com/messaging/webhooks
SLACK_API_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration Key
# Get from: PagerDuty Service > Integrations > Events API v2
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key_here

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=change_me_to_a_strong_password

# Prometheus Admin Password (for basic auth)
PROMETHEUS_ADMIN_PASSWORD=change_me_to_a_strong_password

# AlertManager Admin Password (for basic auth)
ALERTMANAGER_ADMIN_PASSWORD=change_me_to_a_strong_password
