# Monitoring Stack Environment Configuration

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# AlertManager Email Configuration
SMTP_HOST=smtp.gmail.com:587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_FROM=alerts@jobpilot.ai
ALERT_EMAIL_TO=ops@jobpilot.ai
CRITICAL_EMAIL_TO=oncall@jobpilot.ai
WARNING_EMAIL_TO=ops@jobpilot.ai
DB_TEAM_EMAIL=dba@jobpilot.ai
INFRA_TEAM_EMAIL=infra@jobpilot.ai

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Database Configuration (for exporters)
POSTGRES_DB=jobpilot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_PASSWORD=

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=30d

# Monitoring Network
MONITORING_NETWORK=jobpilot-monitoring
