# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobpilot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=jobpilot
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_MANAGEMENT_PORT=15672

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Service (SendGrid/AWS SES)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@jobpilot.ai
EMAIL_FROM_NAME=JobPilot AI

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=jobpilot-uploads
AWS_S3_REGION=us-east-1

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Stripe Payment
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Chrome Extension
EXTENSION_ID=your-chrome-extension-id
EXTENSION_SECRET=your-extension-secret

# Feature Flags
FEATURE_AUTO_APPLY=true
FEATURE_AI_RESUME_BUILDER=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_CHROME_EXTENSION=true

# Job Board APIs
INDEED_API_KEY=your-indeed-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key
ZIPRECRUITER_API_KEY=your-ziprecruiter-api-key

# Puppeteer/Playwright
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# WebSocket
WS_PORT=3001
WS_PATH=/ws

# Session
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_EXPIRATION=86400000

# Mobile App
MOBILE_API_URL=http://localhost:8000/api/mobile
MOBILE_WS_URL=ws://localhost:3001

# Microservices Ports
AUTH_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
RESUME_SERVICE_PORT=8003
JOB_SERVICE_PORT=8004
AUTO_APPLY_SERVICE_PORT=8005
ANALYTICS_SERVICE_PORT=8006
NOTIFICATION_SERVICE_PORT=8007
AI_SERVICE_PORT=8008

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobpilot_test
TEST_REDIS_URL=redis://localhost:6379/1
