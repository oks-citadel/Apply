# Application
APP_NAME=ApplyForUs AI Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Vector Database
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=applyforus-vectors

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# External Services
AUTH_SERVICE_URL=http://localhost:3001
JOB_SERVICE_URL=http://localhost:3002

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# Matching Configuration
MATCH_TOP_K=50
MIN_MATCH_SCORE=0.6
SKILL_MATCH_WEIGHT=0.4
EXPERIENCE_MATCH_WEIGHT=0.3
LOCATION_MATCH_WEIGHT=0.15
CULTURE_MATCH_WEIGHT=0.15

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
