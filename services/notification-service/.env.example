# Environment
NODE_ENV=development

# Service Configuration
PORT=8007
SERVICE_VERSION=1.0.0

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=notification_service
DB_SSL_CA_CERT=

# Redis Configuration (for Bull queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# Email Configuration
EMAIL_FROM=noreply@jobapply.com
EMAIL_FROM_NAME=Job Apply Platform

# Logging
LOG_LEVEL=info

# Azure Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=
APPLICATIONINSIGHTS_INSTRUMENTATION_KEY=

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# Push Notification Configuration
# ============================================

# Firebase Cloud Messaging (FCM) Configuration
# For Android and Web Push Notifications
# Obtain from Firebase Console > Project Settings > Service Accounts
# Set as JSON string or file path
FCM_SERVICE_ACCOUNT='{"type":"service_account","project_id":"your-project-id",...}'
# Alternatively, use file path for local development:
# FCM_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json

# Apple Push Notification Service (APNs) Configuration
# For iOS Push Notifications
# Obtain from Apple Developer Portal > Certificates, Identifiers & Profiles

# APNs Key ID (10 character string from Apple Developer Portal)
APNS_KEY_ID=YOUR_KEY_ID

# APNs Team ID (10 character string from Apple Developer Portal)
APNS_TEAM_ID=YOUR_TEAM_ID

# APNs Private Key (contents of the .p8 file, replace newlines with \n)
APNS_KEY='-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----'

# APNs Environment (true for production, false for development/sandbox)
APNS_PRODUCTION=false
