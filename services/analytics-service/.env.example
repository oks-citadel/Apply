# Application
NODE_ENV=development
PORT=3007

# API Configuration
# Production: Use production URLs
# Local Dev: Use localhost URLs
API_BASE_URL=https://api.applyforus.com
FRONTEND_URL=https://applyforus.com
CORS_ORIGINS=https://applyforus.com,https://www.applyforus.com,https://api.applyforus.com

# Local Development (Override in .env.local)
# API_BASE_URL=http://localhost:8006
# FRONTEND_URL=http://localhost:3000
# CORS_ORIGINS=*

# Database Configuration - Azure PostgreSQL
# Production: Azure Database for PostgreSQL
# Local Dev: Use localhost or Docker Compose
DB_HOST=applyforus-postgres.postgres.database.azure.com
DB_PORT=5432
DB_USERNAME=applyforusadmin@applyforus-postgres
DB_PASSWORD=<your-db-password-here>
DB_NAME=applyforus
DB_SSL=true
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Local Development (Override in .env.local)
# DB_HOST=localhost
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_SSL=false
# DB_SYNCHRONIZE=true
# DB_LOGGING=true

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVAL=3600000
ANALYTICS_ENABLE_REALTIME=true
ANALYTICS_MAX_EVENTS_BATCH=1000

# Export Configuration
EXPORT_MAX_RECORDS=50000
EXPORT_FORMATS=csv,json
EXPORT_CHUNK_SIZE=5000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=1000
