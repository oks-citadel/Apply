# Application
NODE_ENV=development
PORT=8003
API_PREFIX=api/v1

# Database - PostgreSQL connection
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_service_db

# Alternative Database Configuration (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=resume_service_db
n# Database Migration Configuration
# Set to 'true' to automatically run migrations on startup (use with caution in production)
RUN_MIGRATIONS=false

# AWS S3 Configuration
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# S3 bucket name for resume storage
AWS_S3_BUCKET=job-apply-platform-resumes
# AWS region (e.g., us-east-1, us-west-2, eu-west-1)
AWS_REGION=us-east-1
# S3 bucket folder prefix for resumes
AWS_S3_RESUMES_PREFIX=resumes/
# S3 bucket folder prefix for parsed resume data
AWS_S3_PARSED_PREFIX=parsed-resumes/
# S3 bucket folder prefix for generated resumes
AWS_S3_GENERATED_PREFIX=generated-resumes/
# S3 signed URL expiration time in seconds (default: 1 hour)
S3_SIGNED_URL_EXPIRATION=3600

# File Upload Configuration
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880
# Comma-separated list of allowed MIME types
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain
# Allowed file extensions
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.txt
# Upload directory for temporary files (before S3 upload)
UPLOAD_TEMP_DIR=./temp/uploads

# Resume Processing Configuration
# Maximum number of pages to extract from PDF
MAX_PDF_PAGES=10
# Enable OCR for scanned PDFs
OCR_ENABLED=false
# OCR service (tesseract, aws-textract)
OCR_SERVICE=tesseract

# Resume Templates
# Default resume template
DEFAULT_RESUME_TEMPLATE=professional
# Available templates directory
TEMPLATES_DIR=./templates

# Document Generation Configuration
# PDF generation engine (pdfkit, puppeteer)
PDF_GENERATOR=puppeteer
# Generated document quality (low, medium, high)
DOCUMENT_QUALITY=high

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Cache TTL for resume data in seconds (default: 1 hour)
CACHE_TTL=3600

# External Services
AUTH_SERVICE_URL=http://localhost:8001/api/v1
USER_SERVICE_URL=http://localhost:8002/api/v1
AI_SERVICE_URL=http://localhost:8000/api/v1

# AI Integration (for resume optimization)
# Enable AI-powered resume suggestions
AI_SUGGESTIONS_ENABLED=true
# AI service timeout in milliseconds
AI_SERVICE_TIMEOUT=10000

# Rate Limiting
# Maximum uploads per user per day
MAX_UPLOADS_PER_DAY=10
# Maximum downloads per user per day
MAX_DOWNLOADS_PER_DAY=50

# Version Control
# Enable resume version history
ENABLE_VERSION_CONTROL=true
# Maximum number of versions to keep per resume
MAX_VERSIONS_PER_RESUME=10

# Parsing Configuration
# Parser timeout in milliseconds
PARSER_TIMEOUT=30000
# Enable advanced parsing with AI
ADVANCED_PARSING=true

# Security
# Enable virus scanning for uploaded files
VIRUS_SCAN_ENABLED=false
# ClamAV server for virus scanning
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Logging
LOG_LEVEL=debug
# Log file uploads and downloads
LOG_FILE_OPERATIONS=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# JWT Configuration (for authentication validation)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Backup Configuration
# Enable automatic backups to S3
AUTO_BACKUP_ENABLED=false
# Backup frequency in hours
BACKUP_FREQUENCY_HOURS=24

# Analytics
# Track resume views and downloads
ENABLE_ANALYTICS=true

# Webhook Configuration (Optional)
# Webhook URL to notify on resume events
WEBHOOK_URL=
# Webhook secret for signature verification
WEBHOOK_SECRET=
