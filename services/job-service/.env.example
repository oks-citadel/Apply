# Application
NODE_ENV=development
PORT=4002
API_PREFIX=api/v1

# Database - Azure PostgreSQL
# Production: Azure Database for PostgreSQL
# Local Dev: Use localhost or Docker Compose
DB_HOST=applyforus-postgres.postgres.database.azure.com
DB_PORT=5432
DB_USERNAME=applyforusadmin@applyforus-postgres
DB_PASSWORD=<your-db-password-here>
DB_DATABASE=applyforus
DB_SSL=true

# Local Development (Override in .env.local)
# DB_HOST=localhost
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_SSL=false

# Redis - Azure Cache for Redis
# Production: Azure Cache for Redis with SSL/TLS
# Local Dev: Use localhost or Docker Compose
REDIS_HOST=applyforus-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=<your-redis-access-key-here>
REDIS_DB=0
REDIS_TLS=true
REDIS_SSL=true

# Local Development (Override in .env.local)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TLS=false

# Elasticsearch - Azure hosted or Elastic Cloud
# Production: Azure-hosted Elasticsearch
# Local Dev: Use localhost or Docker Compose
ELASTICSEARCH_NODE=https://applyforus-elasticsearch.azurewebsites.net:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=<your-elasticsearch-password-here>
ELASTICSEARCH_SSL=true

# Local Development (Override in .env.local)
# ELASTICSEARCH_NODE=http://localhost:9200
# ELASTICSEARCH_SSL=false

# External APIs
INDEED_API_KEY=
LINKEDIN_API_KEY=
GLASSDOOR_API_KEY=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# AI Service
# Production: Use Kubernetes internal DNS
# Local Dev: Use localhost URLs
AI_SERVICE_URL=http://ai-service.applyforus.svc.cluster.local:8089

# Auth Service (for token validation)
# Production: Use Kubernetes internal DNS
# Local Dev: Use localhost URLs
AUTH_SERVICE_URL=http://auth-service.applyforus.svc.cluster.local:8081

# Local Development (Override in .env.local)
# AI_SERVICE_URL=http://localhost:8089/api/v1
# AUTH_SERVICE_URL=http://localhost:8081/api/v1

# Caching
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Job Aggregation
JOB_AGGREGATION_CRON=0 */6 * * *
JOB_RETENTION_DAYS=90
